<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:background="#E3E2DF">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#5D001E"
      app:titleTextColor="@color/white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Page"
        android:textSize="24sp"
        android:layout_weight="7"
        android:textColor="@color/white"/>

      <ImageView
          android:id="@+id/iv_top_profile"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:tint="@color/white"
          app:srcCompat="@drawable/ic_login" />


    </LinearLayout>

  </androidx.appcompat.widget.Toolbar>



  <ImageView
      android:id="@+id/categ_img1"
      android:layout_width="66dp"
      android:layout_height="75dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="12dp"
      android:src="@drawable/mickey"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar" />

  <ImageView
      android:id="@+id/categ_img2"
      android:layout_width="66dp"
      android:layout_height="75dp"
      android:layout_marginStart="88dp"
      android:layout_marginTop="12dp"
      android:src="@drawable/mickey"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar" />

  <ImageView
      android:id="@+id/categ_img3"
      android:layout_width="66dp"
      android:layout_height="75dp"
      android:layout_marginStart="160dp"
      android:layout_marginTop="12dp"
      android:src="@drawable/mickey"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar" />

  <ImageView
      android:id="@+id/categ_img4"
      android:layout_width="66dp"
      android:layout_height="75dp"
      android:layout_marginStart="232dp"
      android:layout_marginTop="12dp"
      android:src="@drawable/mickey"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar" />

  <ImageView
      android:id="@+id/categ_img5"
      android:layout_width="66dp"
      android:layout_height="75dp"
      android:layout_marginStart="308dp"
      android:layout_marginTop="12dp"
      android:src="@drawable/mickey"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar" />

  <androidx.appcompat.widget.SearchView
      android:id="@+id/et_home_search"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="120dp"
      android:drawableLeft="@drawable/search"
      android:ems="10"
      android:inputType="textPersonName"
      app:iconifiedByDefault="false"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar"
      app:queryHint="Search" />

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/bottom_toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#5D001E"
      app:layout_constraintBaseline_toBottomOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar"
      app:layout_constraintVertical_bias="1.0"
      app:titleTextColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">

      <ImageView
          android:id="@+id/iv_home_bottom"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="4"
          android:tint="@color/white"
          app:srcCompat="@drawable/ic_home" />


      <ImageView
          android:id="@+id/iv_question_bottom"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="4"
          android:src="@drawable/ic_edit"
          android:tint="@color/white" />

      <ImageView
          android:id="@+id/iv_profile_bottom"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="4"
          android:src="@drawable/ic_person"
          android:tint="@color/white" />

    </LinearLayout>
  </androidx.appcompat.widget.Toolbar>

